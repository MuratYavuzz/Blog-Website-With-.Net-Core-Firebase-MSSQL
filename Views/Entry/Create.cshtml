@model YENISOZLUK.Models.Entry

@{
    ViewData["Title"] = "Create";
}
<h2 > @ViewBag.TitleName</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @if(@ViewBag.EditEntry == null)
                { <label asp-for="Text" for="entryarea">Ne söylemek istersin...</label>}
                @if(@ViewBag.EditEntry != null)
                {
                <label asp-for="Text" for="entryarea">Daha önce söylediğini düzenle...</label>
                }
                <textarea asp-for="Text" style="width:750px;" placeholder="@ViewBag.EditEntry" class="form-control"  id="EntryArea" rows="3"></textarea>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" style="margin-top:-15px;margin-left:680px;" value="Gönder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
